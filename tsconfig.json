{
  "compilerOptions": {

    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node", "express"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",

    "outDir": "./dist",
    "rootDir": "./src",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
